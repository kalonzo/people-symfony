{% extends 'base.html.twig' %}

{% block title %}Departments index{% endblock %}

{% block body %}
    <h1>Departments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdDepartment</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td>{{ department.idDepartment }}</td>
                <td>{{ department.name }}</td>
                <td>
                    <a href="{{ path('departments_show', {'idDepartment': department.idDepartment}) }}">show</a>
                    <a href="{{ path('departments_edit', {'idDepartment': department.idDepartment}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('departments_new') }}">Create new</a>
{% endblock %}
