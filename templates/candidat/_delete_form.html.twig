<form method="post" action="{{ path('candidat_delete', {'idCandidate': candidat.idCandidate}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ candidat.idCandidate) }}">
    <button class="btn">Delete</button>
</form>
